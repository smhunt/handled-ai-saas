{
  "name": "@handled/widget",
  "version": "1.0.0",
  "description": "Handled AI embeddable chat widget",
  "main": "dist/embed.js",
  "scripts": {
    "build": "esbuild src/widget.js --bundle --minify --outfile=dist/embed.js --format=iife --target=es2018",
    "build:dev": "esbuild src/widget.js --bundle --outfile=dist/embed.js --format=iife --target=es2018 --define:HANDLED_ENV='\"development\"'",
    "watch": "esbuild src/widget.js --bundle --outfile=dist/embed.js --format=iife --target=es2018 --watch"
  },
  "devDependencies": {
    "esbuild": "^0.20.0"
  },
  "files": [
    "dist/embed.js"
  ]
}
