# Handled - Environment Variables
# Copy this to .env and fill in your values

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL="postgresql://user:password@localhost:5403/handled?schema=public"

# ==============================================
# SERVER (Slot 03)
# ==============================================
PORT=3103
NODE_ENV=development
APP_URL=https://dev.ecoworks.ca:3003
API_URL=https://dev.ecoworks.ca:3103

# CORS - comma separated origins
CORS_ORIGINS=https://dev.ecoworks.ca:3003,http://localhost:3003

# ==============================================
# AUTHENTICATION
# ==============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==============================================
# ANTHROPIC (Claude AI)
# ==============================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ==============================================
# STRIPE (Payments)
# ==============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Price IDs for subscription tiers
STRIPE_STARTER_PRICE_ID=price_starter
STRIPE_PRO_PRICE_ID=price_professional  
STRIPE_BUSINESS_PRICE_ID=price_business

# ==============================================
# TWILIO (SMS)
# ==============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# EMAIL (SMTP)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=notifications@handled.ai

# ==============================================
# REDIS (Optional - for caching/sessions)
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# SENTRY (Error Tracking - Optional)
# ==============================================
SENTRY_DSN=

# ==============================================
# GOOGLE (Calendar Integration - Optional)
# ==============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==============================================
# SUPER ADMIN
# ==============================================
# Comma-separated emails that have super admin access
SUPER_ADMIN_EMAILS=admin@handled.ai

# ==============================================
# DEVELOPMENT
# ==============================================
# Set to true to enable detailed logging
DEBUG=false
